<schemalist>
  <schema id="org.gnome.shell.extensions.useless-gaps" path="/org/gnome/shell/extensions/useless-gaps/">
    <key name="gap-size" type="i">
      <default>20</default>
      <summary>Gap size between windows</summary>
      <description>Margin in pixel windows when tiled left or right or maximized.</description>
    </key>
    <key name="no-gap-when-maximized" type="b">
      <default>false</default>
      <summary>Don't add gap when windows are maximized</summary>
      <description>If set only tiles windows get a gap.</description>
    </key>
    <key name="margin-top" type="i">
      <default>0</default>
      <summary>Margin top</summary>
      <description>Margin top</description>
    </key>

    <key name="margin-bottom" type="i">
      <default>0</default>
      <summary>Margin bottom</summary>
      <description>Margin bottom</description>
    </key>

    <key name="margin-left" type="i">
      <default>0</default>
      <summary>Margin left</summary>
      <description>Margin left</description>
    </key>

    <key name="margin-right" type="i">
      <default>0</default>
      <summary>Margin right</summary>
      <description>Margin right</description>
    </key>

    <key name="exclude-monitor" type="i">
      <default>-1</default>
      <summary>Exclude monitor</summary>
      <description>Exclude monitor</description>
    </key>

  </schema>
</schemalist>
